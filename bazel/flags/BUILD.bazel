load("@bazel_skylib//rules:common_settings.bzl", "bool_flag", "string_flag")
load("//bazel:flags.bzl", "BOOL_FLAGS", "STRING_FLAGS")

[string_flag(
    name = name,
    build_setting_default = values[0],
    values = values,
    visibility = ["//visibility:public"],
) for (name, values) in STRING_FLAGS.items()]

[config_setting(
    name = "%s_%s" % (
        flag,
        value.lower(),
    ),
    flag_values = {
        ("//bazel/flags:%s" % flag): value,
    },
    visibility = ["//:__subpackages__"],
) for flag, values in STRING_FLAGS.items() for value in values]

[bool_flag(
    name = flag,
    build_setting_default = False,
    visibility = ["//visibility:public"],
) for flag in BOOL_FLAGS]

[config_setting(
    name = "%s_enabled" % flag,
    flag_values = {
        ("//bazel/flags:%s" % flag): "True",
    },
) for flag in BOOL_FLAGS]
